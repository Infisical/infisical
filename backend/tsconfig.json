{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "es2021"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
