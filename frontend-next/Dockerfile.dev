# Base layer
FROM node:16-alpine

# Set the working directory 
WORKDIR /app

# Copy over dependency files 
COPY package.json ./
COPY package-lock.json ./

# Install 
RUN npm install --ignore-scripts

# Copy over next.js config 
COPY next.config.js ./next.config.js

# Copy all files 
COPY . .

CMD ["npm", "run", "dev"]
